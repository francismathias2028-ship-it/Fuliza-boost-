  <!-- simple JavaScript for selection & dynamic payment links -->
  <script>
    (function() {
      "use strict";

      const limitButtons = document.querySelectorAll('.limit-btn');
      const selectedDisplay = document.getElementById('selectedLimitDisplay');
      const proceedBtn = document.getElementById('proceedBtn');
      
      // Payment links
      const mpesaLink = document.getElementById('mpesaLink');
      const stripeLink = document.getElementById('stripeLink');
      const paypalLink = document.getElementById('paypalLink');

      // helper to format KSH
      function formatKsh(value) {
        return 'Ksh ' + Number(value).toLocaleString();
      }

      // remove previous selection, add new
      let currentSelected = null;
      let currentValue = 10000; // default

      function clearSelection() {
        limitButtons.forEach(btn => {
          btn.classList.remove('selected');
          // ensure bolt icon stays consistent
          const icon = btn.querySelector('i');
          if (icon && icon.classList.contains('fa-check-circle')) {
            icon.classList.remove('fa-check-circle');
            icon.classList.add('fa-bolt');
         